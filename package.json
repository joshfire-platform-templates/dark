{
  "name": "default",
  "version": "0.0.1",
  "fullName": "Base template",
  "description": "Official base template, supports all the devices compatible with the Factory. Applied by default.",
  "keywords": [
     "default",
     "clean",
     "simple"
   ],
  "joshfire": {
    "images": {
      "small":"http://i.imgur.com/hG6Mk.png",
      "big":"http://i.imgur.com/vJBu3.png"
    },
    "devices": [
      {
        "devices": "desktop",
        "startfile": "app/index.desktop.html",
        "images": "http://i.imgur.com/F2m22.png"
      },
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images":"http://i.imgur.com/rphpo.png"
      },
      {
        "devices": "tablet",
        "startfile": "app/index.tablet.html",
        "images":"http://i.imgur.com/44JIF.png"
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.html",
        "images":"http://i.imgur.com/eVpIc.png"
      },
      {
        "devices": "*",
        "startfile": "app/index.html"
      }
    ],
    "datasources": {
      "main": {
        "title": "Main source",
        "description": "Could be anything"
      },
      "videos": {
        "title": "Videos source",
        "description": "Datasource with videos"
      },
      "news": {
        "title": "News feed",
        "description": "Datasource with articles"
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string"
        }
      },
      "form": [
        "datasources.main",
        "datasources.videos",
        "datasources.news",
        {
          "key": "abouthtml",
          "type": "textarea"
        }
      ]
    }
  }
}