{
  "name": "event",
  "version": "0.0.3",
  "fullName": "Event template",
  "description": "Template designed for events. Use it for conferences, seminars, concerts... It features a unique and slick design and integrates well with your brand logo. Use it to give informations about the event: map, schedule, directory, about page and news. Populate the photo and video gallery with pictures from the event.",
  "keywords": [
     "event",
     "conference",
     "concert",
     "seminar"
   ],
  "joshfire": {
    "images": {
      "small":"http://i.imgur.com/XF5iy.png",
      "big":"http://i.imgur.com/xU1Nn.png"
    },
    "devices": [
      {
        "devices": "desktop",
        "startfile": "app/index.desktop.html",
        "images": "marketing/preview-desktop.png"
      },
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images":"marketing/preview-phone.png",
        "screenshots":["marketing/screenshot-phone.png"]
      },
      {
        "devices": "tablet",
        "startfile": "app/index.tablet.html",
        "images":"marketing/preview-tablet.png",
        "screenshots":["marketing/screenshot-tablet-portrait.png"]    
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.html",
        "images":"marketing/preview-tv.png",
        "screenshots":["marketing/screenshot-tv.jpg"]
      },
      {
        "devices": "*",
        "startfile": "app/index.html"
      }
    ],
    "datasources": {
      "main": {
        "title": "Main tabs",
        "description": "Add up to 6 tabs in your application",
        "multiple":true
      }
    },
    "options": {
      "schema": {
        "abouthtml": {
          "type": "string"
        }
      },
    "form": [
      "datasources.main",
      {
        "key": "abouthtml",
        "type": "textarea"
      }
    ]
    }
  }
}